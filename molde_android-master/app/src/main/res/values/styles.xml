<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LocalSearchInputStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#ffc32f</item>
        <item name="android:textCursorDrawable">@color/colorDeepDarkGray</item>
        <item name="android:textColor">@color/colorDeepDarkGray</item>
        <item name="android:textColorHint">@color/colorLittleDarkGray</item>
        <item name="android:textColorHighlight">#ffd262</item>
    </style>

</resources>
